.single-news-container{
  margin-top: 65px;
  min-width: 768px;
  .ads {
    .top {
      position absolute
      width 400px
      height 60px
      left: calc(50% - 200px);
      top: 40px
      background-color black
    }
    .left {
      position absolute
      width 90px
      height 400px
      top: 200px
      left: 40px
      background-color black
    }
    .right {
      position absolute
      width 90px
      height 400px
      top: 200px
      right: 40px
      background-color black
    }
    @media (max-width 1100px) {
      .left {
        left: 0px
      }

      .right {
        right: 0px
      }
    }
  }

  .news-header{
    width 100%
    height 400px
    header{
      .left-line{
        height: 1px
        width: 50%
        background-color white
      }
      .title{
        color: white
        margin-left : 50%
      }
      .right-line{
        height: 1px
        width: 50%
        background-color white
      }
    }
  }
}