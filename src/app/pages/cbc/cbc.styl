darma-box-shadow = 0px 12px 20px 0px rgba(0, 0, 0, 0.75);
.cbc-page {
  position relative
  width 100%
  height 100%
  background-color rgb(44, 44, 140)
  min-width 1024px;
  padding-bottom: 20px;
  .ads {
    .top {
      position absolute
      width 400px
      height 60px
      left: calc(50% - 200px);
      top: 90px
      background-color black
    }
    .left {
      position absolute
      width 90px
      height 400px
      top: 200px
      left: 40px
      background-color black
    }
    .right {
      position absolute
      width 90px
      height 400px
      top: 200px
      right: 40px
      background-color black
    }
    @media (max-width 1100px) {
      .left {
        left: 0px
      }

      .right {
        right: 0px
      }
    }
  }
  drama-carousel {
    .drama-carousel-container {
      box-shadow: darma-box-shadow
    }
  }
  inner-live {
    width 102%
    margin-left: -1%;
    display block
    .inner-live {
      border none
      box-shadow: darma-box-shadow
    }
  }

  hub-items-carousel {
    .items-carousel-component-all {
      width: 66.6%
      float right
      margin-bottom: 7px;
      padding 0
    }
  }

  .news {
    width 100%
    height: 457px
    background-color rgb(93, 93, 93)
    position relative

    header {
      height 40px;
      width 100%;
      h3 {
        font-size 17px
        float right
        margin-top 20px
        margin-right 20px
      }
      .horizontal-line {
        float: right;
        height: 3px;
        background-color: rgb(151, 151, 151);
        width: 78%;
        margin-top: 32px;
        margin-right: 12px;
      }
    }

    .news-content {
      clear both
      margin-top: 30px;
      news-list-lg {
        width: 23%;
        margin-right: 10px;
        margin-left: 10px;
        box-sizing: border-box;
        float: right;
        box-shadow: -2px -1px 19px 6px rgba(0, 0, 0, 0.4);
        .list-container-lg {
          margin-bottom 0px;
          .article:nth-of-type(n+2) h3 {
            padding: 4px;
            margin: 0px;
            float: left;
            width: 63%;
            padding: 0px;
            line-height: 10px;
            text-align: -webkit-right;
            box-sizing: border-box;
            margin-right: 4%;
          }
        }
      }

      .news-carousel {
        width 72%
        margin-right 1%
        margin-left 1%
        drama-news-slick {
          height 260px
          width 100%
          padding-right: 28px;
          padding-left: 28px;
          background-color rgb(65, 65, 65)
          display block
        }
        .news-add {
          width: 65%;
          margin: auto;
          height: 76px;
          background-color: #000;
          margin-top: 30px;
        }
      }
    }
  }
  .lower-part {
    padding: 0px 0px 10px 0px
    background-color rgb(177, 177, 177)
    box-shadow darma-box-shadow
    .most-viewed-text {
      text-align: end;
      margin-right: 38px;
      color: black;
      font-weight: bold;
      line-height: 47px;
    }
  }

  .after-live {
    position relative
    width 100%
    height 233px
    background-color rgb(132,144,200)
    box-shadow darma-box-shadow
    padding-bottom: 2px;
    .schedule-container {
      width calc(25% - 20px)
      height 100%
      background-color #1e1e1e;
      float right
    }
    .most-watched {
      width 77%
      background-color rgb(132, 144, 200);
      float right
      .title {
        height: 35px;
        float: right;
        line-height: 35px;
        color: #fff;
        font-weight: bold;
        font-size: 15px;
        background-color rgb(93, 93, 93)
        width: 66.6%;
        text-align: right;
        padding-right: 20px;
        margin-top: 7px;
      }
      .items-carousel-component-all {
        clear both
      }
      .add {
        width: calc(33.3% - 7px);
        height: 208px;
        background-color: #000;
        color: #fff;
        margin-top: 7px;
        margin-left: 7px;
        margin-bottom: 7px;
      }
    }

  }
}
