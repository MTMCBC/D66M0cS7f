darma-box-shadow = 0px 12px 20px 0px rgba(0, 0, 0, 0.75);
.drama-page {
  position relative
  width 100%
  height 100%
  background-color rgb(100, 190, 194)
  min-width 1024px;
  .ads {
    .top {
      position absolute
      width 400px
      height 60px
      left: calc(50% - 200px);
      top: 90px
      background-color black
    }
    .left {
      position absolute
      width 90px
      height 400px
      top: 200px
      left: 40px
      background-color black
    }
    .right {
      position absolute
      width 90px
      height 400px
      top: 200px
      right: 40px
      background-color black
    }
    @media (max-width 1100px) {
      .left {
        left: 0px
      }

      .right {
        right: 0px
      }
    }
  }
  drama-carousel {
    .drama-carousel-container {
      box-shadow: darma-box-shadow
    }
  }
  inner-live {
    width 102%
    margin-left: -1%;
    display block
    .inner-live {
      border none
      box-shadow: darma-box-shadow
    }
  }

  hub-items-carousel {
    .items-carousel-component-all {
      width: 66.6%
      float right
      margin-bottom: 7px;
      padding 0
    }
  }

}

.after-live {
  position relative
  width 100%
  height 233px
  background-color #034153;
  box-shadow darma-box-shadow
  padding-bottom: 2px;
  .schedule-container {
    width calc(25% - 20px)
    height 100%
    background-color #1e1e1e;
    float right
  }
  .most-watched {
    width 77%
    background-color rgb(3, 65, 83);
    float right
    .title {
      height: 35px;
      float: right;
      line-height: 35px;
      color: #fff;
      font-weight: bold;
      font-size: 15px;
      background-color rgb(93, 93, 93)
      width: 66.6%;
      text-align: right;
      padding-right: 20px;
      margin-top: 7px;
    }
    .items-carousel-component-all {
      clear both
    }
    .add {
      width: calc(33.3% - 7px);
      height: 208px;
      background-color: #000;
      color: #fff;
      margin-top: 7px;
      margin-left: 7px;
      margin-bottom: 7px;
    }
  }

}
