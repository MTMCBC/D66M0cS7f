.drama-carousel-container {
  width: 100%
  height 380px
  border white 10px solid
  .drama-carousel {
    width 100%
    height 100%
    .carousel {
      width 100%
      height 100%
      .carousel-inner {
        height 100%
      }
    }
    .cbc-hub-carousel-element {
      width: 100%
      height 100%
      .carousel-img{
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 50% 50%;
      }
    }
  }
  .carousel-control.left {
    display block
    background-image url("../assets/images/drama-carousel-left.png")
    background-position: 50% 50%;
    margin-left: -37px;
    opacity 1
    background-position: 50% 50%;
    background-size: contain;
    width: 65px;
    cursor pointer
    span {
      display none
    }
  }
  .carousel-control.right {
    display block
    background-image url("../assets/images/drama-carousel-right.png")
    background-position: 50% 50%;
    margin-right: -40px;
    opacity 1
    background-position: 50% 50%;
    background-size: contain;
    width: 65px;
    cursor pointer
    span {
      display none
    }
  }
  .right {

  }
  .left {

  }
}
