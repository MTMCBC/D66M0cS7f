.player-modal
  height 100% !important
  color white
  .modal-lg
    height 100% !important
    width 100%
    margin 0px
    .modal-content
      width 100%
      height 100% !important
.player-container
  position relative
  width: 100%
  height 100%
  background-color rgb(51,51,51)

  .controllers-wrapper
    height 30px
    width 100%
    position relative
    top: 0px

    .close-icon
      float right

  .player-wrapper
    width 100%
    height: calc( 100% - 230px);
    position relative

    .ads
      position relative
      height: 100%
      .left
        position absolute
        left 10px
        top 10%
        width 80px
        margin-right 20px
        height 80%
        background-color #0a833d

      .top
        position: absolute;
        left: 100px;
        right: 0px;
        top: 10px
        width: calc(100% - 200px)
        height: 80px;
        margin-bottom: 20px;
        background-color: #0a833d;

      .right
        position absolute
        right 10px
        top 10%
        width 80px
        margin-left 20px
        height 80%
        background-color #0a833d
      .player
        width 100%
        height 100%
        background-color lightslategray
  .carousel
    margin-top 20px
    width 80%
    margin-left 10%

