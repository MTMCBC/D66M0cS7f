toolBarHeigh = 65px
.my-topbar{
	background-color: rgb(48,48,48);
	height: toolBarHeigh
	width: 100%;
	color: white;
  position:fixed
  z-index 1000
  top: 0;
}

.my-topbar .cbc-topbar-logo{
	height: 46px;
    width: 90px;
    float: right;
    margin-right: 13%;
    margin-top: 10px;
}

.my-topbar .cbc-topbar-list .cbc-topbar-title{
	float: right;
    line-height: toolBarHeigh
    margin-right: 30px;
    cursor: pointer;
}
.my-topbar .cbc-topbar-list .cbc-topbar-title-live{
	float:right;
	height:40px;
	margin-top:12px;
	margin-right: 30px;
    cursor: pointer;
}

.my-topbar .cbc-topbar-list .cbc-topbar-title-live .live-btn{
	line-height: 40px;
	background-color:rgb(163,163,163);
	padding-left:20px;
	padding-right: 20px;
	border-radius:5px;
	height:100%;
}

.my-topbar .cbc-topbar-list .cbc-topbar-title-live .live-btn .cbc-live-title{
	float:right
}

.cbc-topbar-live-select{
  float: right;
  height: 80%;
  padding-right: 10px;
  background-color: #a3a3a3;
  display: none;
  border-right: 2px solid black;
  margin-right: 10px;
  margin-top: 1.4%;
}

.live-btn:hover .cbc-topbar-live-select{
	display:block;
}

.my-topbar .cbc-topbar-list .cbc-topbar-title-live .live-btn .cbc-topbar-live-select img{
	width: 53px;
}
