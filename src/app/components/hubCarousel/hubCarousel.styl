.hub-carousel-container{
  position: relative;
  height: 520px;
  margin-top: 65px;
}
.hub-carousel {
    width: 100%;
    height: 100%;
    position: absolute;
}

.hub-carousel dev {
	margin:auto;
    width: 100%
    height:100%;
}

.hub-carousel #slides_control {
	position:absolute;
	left:50%;
	top:20px;
	margin-left:-200px;
	height:100%;
}

.hub-carousel .carousel{
	height:100%;
	width:100%;
}

.hub-carousel .carousel-inner{
	height:100%;
	width:100%;
}

.hub-carousel .cbc-hub-carousel-element{
	height:100%;
	width:100%;
}


.hub-carousel .carousel-indicators{
	top: 30px;
    left: 8%;
    height:20px;
}
.hub-carousel .div-with-bg{
	height:100%;
	width:100%;
	background-size: contain;
}

.hub-carousel-strip{
  width :100%;
  height 100px;
  position: absolute;
  bottom: 0px;
  overflow: hidden;
}

.hub-carousel-strip-strip{
  position: absolute;
  height: 100%;
  width: 100%;
  bottom: 0px;
  z-index -1;
}
.hub-carousel-strip-container-selected{
  bottom 122px !important;
  transition bottom 1s linear;
}

.hub-carousel-strip:hover .hub-carousel-strip-strip{
  margin-top: 0%;
}
.hub-carousel-strip-container{
  height:100%;
  width :100%;
  white-space:nowrap;
  overflow: auto;
  overflow-y: hidden;
  position absolute
  bottom 0px;
  transition bottom 1s linear;
}

.hub-carousel-strip-element{
  display:inline-block;
  white-space:normal;
  width:14.28%;
  height:100%;
  background-size:cover;
  .desc-hover{
    width 14.28%
    height 100%
    position absolute
    top 0
    z-index 1
    background-color rgba(0,0,0,0.5)
    padding: 10px;
    color white
    opacity 0
  }
  &:hover{
    background-color blue !important
    .desc-hover{
      opacity:1;
      transition opacity 1s linear
    }
  }
}

.hub-carousel-strip-element-bg{
  width: 100%;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  position :relative;
}
.selected {
  width: 14.28%;
  height: 5px;
  background-color: blue;
  position: absolute;
  top: 0px;
  z-index: 1;
}
.carousel-control.left{
  display: none
}
.carousel-control.right{
  display: none
}

.hub-carousel
  .descrip
    float: right
    height: 0%
    width: 25%
    position: absolute
    top: 0
    right: 0
    background-color rgba(0,0,0,0.8);
    transition height 1s
  .animate-desc
    height 100%
    transition height 1s
    .pg-logo
      opacity 1
      transition opacity 1s
      transition-delay 0.5s
  .pg-logo
    width: 100%;
    position: relative;
    top: 10%;
    opacity 0;
    transition opacity 0.5s

