.drama-news-slick-container{
  .slick-arrow{
    position: absolute;
    z-index: 1;
    height: 100%;
    width: 30px;
    background-color: rgb(151,151,151);
  }
  article{
    width: 88%;
    position: relative;
    margin: 10px;
    box-shadow: -2px -1px 2px 0px rgba(0,0,0,0.4);
    .article-image{
      width 100%
      height 143px
      background-size cover
    }
    .article-header{
      margin: 0px;
      padding-right: 6px;
      margin-top: 2px;
      font-size: 14px;
      text-align: right;
      font-weight: bold;
      padding-bottom: 3px;
      background-color: #fff;
      color: #000;
      border-bottom: 1px solid #8A8A8A;
    }
    .article-breif{
      width 100%
      padding 2px
      box-sizing border-box
      height 76px
      text-align: right;
      font-size: 14px;
      background-color white
      color black
    }
  }
}