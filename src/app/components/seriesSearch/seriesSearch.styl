darma-box-shadow = 0px 12px 20px 0px rgba(0, 0, 0, 0.75);
.series-part {
  box-shadow: darma-box-shadow;
  .series-search-container {
    width 107%;
    height 60px;
    background-color: rgb(30, 30, 30);
    box-shadow: darma-box-shadow;

    .series-title {
      font-weight bold;
      font-size 20px;
      float right;
      margin-right 20px
      margin-top 20px
      padding-left: 20px;
      border-left: 1px solid;
    }
    .search-box {
      float: right;
      margin-right: 18px;
      margin-top: 19px;
      input {
        width: 220px;
        background-color: #1e1e1e;
        direction: RTL;
        padding-right: 10px;
        color: #fff;
        outline: none;
        border: none;
        border-bottom: gray 1px solid;
        padding: 3px;
        box-sizing: border-box;
      }

    }
    .search-btn {
      float left
      margin-left 30px
      margin-top: 20px;
      button {
        background-color rgb(52, 52, 52);
      }
    }
  }

  .series{
    display flex
    justify-content center
    flex-wrap: wrap;
    margin-top 20px;
    .series-item{
      width: 204px;
      height: 169px;
      margin: 20px;
      background-size: contain;
      border: 3px #fff solid;
      position relative
      .bottom{
        position: absolute;
        height: 31px;
        width: 100%;
        bottom: 0;
        background-color: rgb(50,50,50);
      }
    }
  }
}
.drama.series-part{
  background-color rgb(3,68,83)
  .series-search-container {
    .series-title {
      color rgb(93, 202, 203);
    }
  }
}
.cbc.series-part{
  background-color rgb(132,144,200)
  .series-search-container {
    .series-title {
      color rgb(132, 144, 200);
    }
  }
}
.extras.series-part{
  background-color rgb(150,150,250)
  .series-search-container {
    .series-title {
      color rgb(150, 150, 250);
    }
  }
