.inner-live {
  width 100%
  height 85px;
  background-color rgb(30, 30, 30)
  border-top 1px solid white
  .icon-cal-container {
    width 90px
    height 100%
    background-color rgb(64, 64, 64)
    float right
    .icon-cal {
      height: 80%;
      margin-top: 7%;
      padding: 10px;
      background-image: url("../assets/images/calendar-icon.png");
      background-size: contain;
      background-position: 50% 50%;
      background-repeat: no-repeat;
    }
  }
  .prog-div {
    width: calc(33% - 30px);
    height: 100%;
    margin-top: 10px;
    float: right;
    height: calc(100% - 20px);
    .time {
      float right;
      font-size 15px;
      font-weight bold;
      margin-right 20px;
    }
    .title {
      /* float: right; */
      font-size: 15px;
      font-weight: bold;
      margin-right: 20px;
      /* width: 50%; */
      margin-top: 25px;
      text-align: right;
    }
  }
  .prog-now, .prog-next {
    border-left 2px solid rgb(3, 65, 83)
  }
}

.cbc{
  .prog-div{
    .time{
      color: rgb(132,144,200);
    }
    .title{
      color: rgb(132,144,200);
    }
  }
}

