$main-width = 60%
$other-width = (100% - $main-width)
$margins = - ($other-width/2)
.news-header-container
  .header
    text-align center
  .graphic
    width 100%;
    height 350px
    .left-gp
      height 300px
      width $other-width
      background-color red
      z-index 1
      float left
      margin-top 25px
      position relative

    .main-gp
      height 350px
      width $main-width
      background-color yellow
      z-index 2
      float left
      margin-left $margins
      position relative

    .right-gp
      height 300px
      width $other-width
      background-color green
      z-index 1
      float left
      margin-top 25px
      margin-left $margins
      position relative
