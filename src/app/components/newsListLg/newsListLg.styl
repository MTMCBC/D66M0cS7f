.list-container-lg
  color: white;
  padding-top: 0px;
  padding-left: 0px;
  width: 100%;
  float: left;
  .h2
    background-color: #f2f2f2;
    color: #404040;
    font-size: 16px;
    text-align: center;
    margin: 0px;
    height: 25px;
    line-height: 25px;
  .article:nth-of-type(1)
    border-top: 1px #d9d9d9 solid;
    font-size 14px
    position relative
    img
      width: 100%
    h3
      line-height 10px
      .span
        font-size: 10px;
        color: #000;
        font-weight: 100;

  .title-container
    background: rgba(250,250,250,.85)
    bottom: 0px
    position: absolute
    h3
      padding-top 2px
      margin-top 2px
  .article:nth-of-type(n+2)
    border-top: 1px #d9d9d9 solid;
    font-size 14px
    margin-bottom: 10px;
    .small-image
      width: 33%;
    h3
      margin 4px
      float: right;
      width: 63%;
      padding 2px
      line-height 10px
      a
        &:hover
          text-decoration none !important
          .span
            color red
      .span
        font-size 10px
        color: #fff;
        font-weight: 100;
